<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DashboardActivity">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_navbar"
        android:layout_alignParentTop="true"
        android:id="@+id/container" />

    <LinearLayout
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_menu_navbar"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_6sdp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/home_anim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/text_nav_home"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/home_icon" />

            <TextView
                android:id="@+id/text_nav_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_material"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_menu_navbar"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_6sdp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/material_anim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/text_nav_material"
                android:padding="@dimen/_6sdp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/material_icon" />

            <TextView
                android:id="@+id/text_nav_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Materials"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_users"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_menu_navbar"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_6sdp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/users_anim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/text_nav_users"
                android:padding="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/co_walking" />

            <TextView
                android:id="@+id/text_nav_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Users"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_courses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_menu_navbar"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_6sdp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/courses_anim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/text_nav_course"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/bell_icon" />

            <TextView
                android:id="@+id/text_nav_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Notifications"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_menu_navbar"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_6sdp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/settings_anim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/text_nav_settings"
                android:padding="0dp"
                android:scaleX="1.4"
                android:scaleY="1.4"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/settings_icon" />

            <TextView
                android:id="@+id/text_nav_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>